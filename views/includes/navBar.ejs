<div class="backdrop"></div>
<header class="main-header">
    <button id="">Menu</button>
    <nav class="">
        <ul class="">
            <li class="">
                <a class="<%= path === '/' ? 'active' : '' %>" href="/">Gallery</a>
            </li>
            <% if (isAuthenticated) { %>
                <li class="">
                    <a class="<%= path === '/add-art' ? 'active' : '' %>" href="/add-art">Add Art Piece
                    </a>
                </li>
                <li class="">
                    <a class="<%= path === '/my-art' ? 'active' : '' %>" href="/my-art">My Art
                    </a>
                </li>
            <% } %>
        </ul>
        <ul class="">
            <% if (!isAuthenticated) { %>
                <li class="">
                    <a class="<%= path === '/login' ? 'active' : '' %>" href="/login">Login</a>
                </li>
                <li class="">
                    <a class="<%= path === '/signup' ? 'active' : '' %>" href="/signup">Signup</a>
                </li>
            <% } else { %>
                <li class="">
                    <form action="/logout" method="post">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <button type="submit">Logout</button>
                    </form>
                </li>
            <% } %>
        </ul>
    </nav>
</header>